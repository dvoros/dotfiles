# GIT
export GIT_COMPLETION_SHOW_ALL_COMMANDS=1 # enable auto-complete for plumbing commands
alias gs='git status'
alias gr='git remote'
alias gl='git log --graph --date-order --pretty=format:"%C(yellow)%h %C(green)%cd %C(auto)%<(12,trunc)%an:%C(auto)%d %s" --date=iso'
alias glf='git log --decorate=full --pretty=fuller'
alias glff='git log --decorate=full --pretty=fuller -p'
alias glu='gl HEAD @{u}'
alias gco='git checkout'
alias gd='git diff'
alias gdw='git diff --color-words=.'
alias grh='git reset --hard'
alias grhh='git reset --hard HEAD~'
alias grhu='git reset --hard @{u}'
alias grhm='git reset --hard refs/remotes/origin/HEAD'
alias gsno='git show --name-only'
alias gcp='git cherry-pick'
alias gcpx='git cherry-pick -x'
alias grem='git rebase refs/remotes/origin/HEAD'
alias gre='git rebase'
alias greu='git rebase @{u}'
alias greim='git rebase -i refs/remotes/origin/HEAD'
alias greiu='git rebase -i @{u}'
alias ga='git add'
alias gref='git reflog'
alias gf='git fetch'
alias gfo='git fetch origin'
alias grm='BR=`git symbolic-ref refs/remotes/origin/HEAD | cut -f4 -d/`; git fetch origin && git checkout $BR && git reset --hard origin/$BR'
alias gcav='git commit -av'
alias gcv='git commit -v'

alias k='kubectl'

# Increase command history size
HISTSIZE=1000000
HISTFILESIZE=2000000

eval "$(fzf --zsh)"

# Edit found stuff
v () {
	f="$(fzf-tmux -p)"
	if [ "x$f" != "x" ]; then
		echo "$f"
		nvim "$f"
	fi
}
alias vh='vim $(FZF_DEFAULT_COMMAND="find . -type f" fzf)'

# Launch remote tmux
tmux_at () {
	ssh -t $@ 'tmux -S /tmp/dvoros.tmux.sock attach || tmux -S /tmp/dvoros.tmux.sock -f <(wget -qO- https://raw.githubusercontent.com/dvoros/dotfiles/master/remote_tmux.conf)'
}

stty stop ""

alias fr='cd ~/repos/`ls ~/repos | fzf --tmux || echo .`'
alias ff='cd `fzf --walker dir,follow,hidden --tmux || echo .`'

