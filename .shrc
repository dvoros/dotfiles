# GIT
alias gs='git status'
alias gr='git remote'
alias gl='git log --oneline --decorate=short --graph --date-order'
alias glf='git log --decorate=full --pretty=fuller'
alias glff='git log --decorate=full --pretty=fuller -p'
alias gd='git diff'
alias gdw='git diff --color-words=.'
alias grh='git reset --hard'
alias grhh='git reset --hard HEAD~'
alias grhu='git reset --hard @{u}'
alias gsno='git show --name-only'
alias gcp='git cherry-pick'
alias gcpx='git cherry-pick -x'

# Find stuff
f() {
	rm -f /tmp/found_with_f
	find . -iname "*$1*" 2>/dev/null | tee /tmp/found_with_f
	export F="$(cat /tmp/found_with_f | paste -sd ' ')"
}

# Edit found stuff
v() {
	if [ "x$1" = "x" ]; then
		if [ "x$F" = "x" ]; then
			echo "No previous f."
		else
			vim -p $(echo $F)
		fi
	else
		vim -p $(f "$1")
	fi
}
